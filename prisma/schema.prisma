generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  // MongoDB dùng chuỗi hex làm ID
  id String @id @default(auto()) @map("_id") @db.ObjectId

  email           String   @unique
  firstName       String
  lastName        String
  birthDate       DateTime?
  phone           String?
  address         String?
  
  // Các trường này vẫn giữ nguyên
  passwordHash    String
  passwordSalt    String
  
  // Các trường OTP
  otp             String?
  otpCreatedAt    DateTime?
  otpExpiresAt    DateTime?
  
  // Các trường thời gian
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // === ĐỔI TÊN COLLECTION TRONG DB (Tùy chọn) ===
  @@map("users") 
}
